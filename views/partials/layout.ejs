<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RishiVerse</title>

    <!-- Tailwind CSS & Remix Icons -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet">
</head>

<body>
    <!-- Updated Navigation Bar -->
    <nav class="w-full bg-red-900 text-white px-6 py-4 shadow-md flex items-center justify-between">
        <!-- Left: Logo and Name -->
        <div class="flex items-center space-x-3">
            <span class="text-2xl font-bold font-['Pacifico'] tracking-wide">RISHIVERSE</span>
        </div>
        <button class="ml-2 text-white">
            <i class="ri-menu-line text-xl"></i>
        </button>
        <!-- Navigation Links -->
        <div class="flex space-x-6">
            <a href="rishis" class="text-white hover:text-yellow-300">Home</a>
            <a href="#" class="text-white hover:text-yellow-300">Chat Forum</a>
        </div>
        </div>
        <div class="relative w-full md:w-80 mt-2 md:mt-0">
            <input type="text" id="searchInput" placeholder="Search books and categories..."
                class="w-full px-4 py-2 rounded-md text-black focus:outline-none focus:ring-2 focus:ring-yellow-500"
                oninput="searchData()" />
            <div id="searchResults"
                class="absolute bg-white text-black rounded-md mt-1 w-full z-50 hidden max-h-60 overflow-y-auto shadow-lg">
                <ul id="resultsList" class="p-2 space-y-2 text-sm"></ul>
            </div>
        </div>

        <!-- Authentication Links -->
        <div id="authLinks" class="flex space-x-4">
            <a href="login" class="text-white hover:text-yellow-300">Login</a>
            <a href="signup" class="text-white hover:text-yellow-300">Signup</a>
        </div>
    </nav>

    <!-- JavaScript for Authentication -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const user = JSON.parse(localStorage.getItem("userData"));
            const authLinks = document.getElementById("authLinks");

            if (user) {
                authLinks.innerHTML = `
                    <div class="flex space-x-4">
                        <a href="profile" class="text-white hover:text-yellow-300">Profile</a>
                        <button id="logoutBtn" class="text-red-300 hover:text-red-500">Logout</button>
                    </div>
                `;

                document.getElementById("logoutBtn").addEventListener("click", function () {
                    localStorage.removeItem("userData");
                    location.reload();
                });
            }
        });
    </script>
    <script>
        const data = [
            { name: "Historic Cities of India", link: "/historic-cities" },
            { name: "Ayurvedas", link: "/ayurvedas" },
            { name: "Paintings", link: "/paintings" },
            { name: "Spirituality", link: "/spirituality" },
            { name: "Vedic Science", link: "/vedic-science" },
            { name: "audioBooks", link: "/audiobooks" },
            { name: "Forts of India", link: "/fort" },
            { name: "Temples of Hosyala", link: "/temples" },
            { name: "Indian Dance Forms", link: "/dance" }
        ];


        function searchData() {
            const input = document.getElementById("searchInput").value.toLowerCase();
            const results = data.filter(item =>
                item.name.toLowerCase().includes(input)
            );

            const resultsList = document.getElementById("resultsList");
            resultsList.innerHTML = "";

            if (input === "") {
                document.getElementById("searchResults").classList.add("hidden");
                return;
            }

            results.forEach(item => {
                const li = document.createElement("li");
                li.textContent = item.name;
                li.className = "cursor-pointer hover:bg-gray-100 p-2 rounded";
                li.onclick = () => {
                    window.location.href = item.link; // Redirect to the linked EJS route
                };
                resultsList.appendChild(li);
            });

            document.getElementById("searchResults").classList.remove("hidden");
        }
    </script>

</body>
</html>