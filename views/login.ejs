<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Rishiverse</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }

        body {
            background: rgb(255, 253, 247);
        }

       
        /* Container */
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 85vh;
            gap: 50px;
        }

        /* Left Image Section */
        .content img {
            width: 100%;
            max-width: 450px;
            border-radius: 10px;
        }

        .content h2 {
            font-size: 24px;
            margin-top: 10px;
        }

        .content p {
            font-size: 14px;
            color: #191717;
        }

        /* Login Form */
        .login {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            width: 350px;
        }

        .login h2 {
            font-size: 22px;
            margin-bottom: 15px;
        }

        .input-field {
            width: 100%;
            padding: 10px;
            margin: 8px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
        }

        .password-recovery {
            text-align: right;
            font-size: 12px;
            color: #FF5733;
            text-decoration: none;
            margin-top: 5px;
            display: block;
        }

        .continue-btn {
            width: 100%;
            background: #FF5733;
            color: white;
            padding: 10px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            margin-top: 10px;
        }

        .continue-btn:hover {
            background: #E64A19;
        }

        #message {
            margin-top: 10px;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <%- include('./partials/layout') %> 

    <div class="container">
        <!-- Left Image Section -->
        <div class="content">
            <img src="/images/image.png" alt="Illustration">
            <h2>Immersive Reading Mode</h2>
            <p>A synchronized ebook and audiobook feature where users can listen to the narration while the text is highlighted, offering a seamless reading and listening experience.</p>
        </div>

        <!-- Right Login Section -->
        <div class="login">
            <h2>Login</h2>
            <form id="loginForm">
                <input type="email" id="email" class="input-field" placeholder="Email address" required>
                <input type="password" id="password" class="input-field" placeholder="Password" required>
                <a href="#" class="password-recovery">Forgot Password?</a>
                <button type="submit" class="continue-btn">Login</button>
            </form>
            <div id="message"></div>
        </div>
    </div>

    <script>
        document.getElementById('loginForm').addEventListener('submit', async (event) => {
            event.preventDefault();

            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value;
            const messageDiv = document.getElementById('message');

            try {
                const response = await fetch('/login', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email, password })
                });

                const text = await response.text();

                if (response.ok) {
                    const result = JSON.parse(text);
                    messageDiv.textContent = result.message;
                    messageDiv.style.color = 'green';
                    setTimeout(() => {
                        window.location.href = result.redirectUrl || '/rishis';
                    }, 1000);
                    alert(result.message);
                        window.location.href = result.redirectUrl;
                } else {
                    try {
                        const error = JSON.parse(text);
                        messageDiv.textContent = error.error || 'Login failed';
                    } catch {
                        messageDiv.textContent = 'Unexpected error occurred';
                    }
                    messageDiv.style.color = 'red';
                }
            } catch (err) {
                messageDiv.textContent = 'Could not connect to server';
                messageDiv.style.color = 'red';
            }
        });
    </script>
</body>
</html>
