<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - Open Library</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet">
  <style>
    body{
        background-color:rgb(255 241 196);
    }
  </style>
</head>

<body>
    <%- include('partials/layout') %>  <!-- Include the navbar partial -->
    <main class="flex-1 ml-20 p-8">
    <i class="ri-arrow-down-s-line"></i>
    
  

            <main class="container p-4 pt-0rem">
        <div class="max-w-xl mx-auto bg- rgb(250 243 198) p-8 !rounded-lg shadow-sm">
            <h1 class="text-3xl font-bold mb-4">Sign Up</h1>
            <p class="text-gray-600 mb-8">Get access to free open books from RishiVerse </p>
            <button
                class="w-full flex items-center justify-center space-x-2 border border-gray-300 py-3 !rounded-button mb-6 hover:bg-orange-50">
                <img src="https://www.google.com/favicon.ico" alt="Google" class="w-5 h-5">
                <span>Continue with Google</span>
            </button>
            <div class="relative mb-6">
                <div class="absolute inset-0 flex items-center">
                    <div class="w-full border-t border-gray-300"></div>
                </div>
                <div class="relative flex justify-center text-sm">
                    <span class="px-2 bg-rgb(255 241 196) text-gray-500">OR</span>
                </div>
            </div>
            <form id="signupForm" class="space-y-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                    <input type="email" required
                        class="w-full px-3 py-2 border border-gray-300 !rounded-button focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                    <div class="relative">
                        <input type="password" required
                            class="w-full px-3 py-2 border border-gray-300 !rounded-button focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary">
                        <button type="button"
                            class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600"
                            onclick="togglePassword(this)">
                            <i class="ri-eye-line"></i>
                        </button>
                    </div>
                </div>
                <div class="space-y-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Profession</label>
                        <select required
                            class="w-full px-3 py-2 border border-gray-300 !rounded-button focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary pr-8 appearance-none bg-white">
                            <option value="">Select your profession</option>
                            <option value="student">Student</option>
                            <option value="teacher">Teacher</option>
                            <option value="researcher">Researcher</option>
                            <option value="writer">Writer</option>
                            <option value="librarian">Librarian</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Field of Work/Study</label>
                        <select required
                            class="w-full px-3 py-2 border border-gray-300 !rounded-button focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary pr-8 appearance-none bg-white">
                            <option value="">Select your field</option>
                            <option value="arts">Arts & Humanities</option>
                            <option value="science">Science & Technology</option>
                            <option value="social">Social Sciences</option>
                            <option value="business">Business & Economics</option>
                            <option value="education">Education</option>
                            <option value="medicine">Medicine & Healthcare</option>
                            <option value="engineering">Engineering</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Reading Interests (Optional)</label>
                        <div class="grid grid-cols-2 gap-4">
                            <label class="flex items-center space-x-2">
                                <input type="checkbox" name="interests" value="fiction"
                                    class="text-primary focus:ring-primary">
                                <span class="text-sm text-gray-600">Fiction</span>
                            </label>
                            <label class="flex items-center space-x-2">
                                <input type="checkbox" name="interests" value="nonfiction"
                                    class="text-primary focus:ring-primary">
                                <span class="text-sm text-gray-600">Non-Fiction</span>
                            </label>
                            <label class="flex items-center space-x-2">
                                <input type="checkbox" name="interests" value="academic"
                                    class="text-primary focus:ring-primary">
                                <span class="text-sm text-gray-600">Academic</span>
                            </label>
                            <label class="flex items-center space-x-2">
                                <input type="checkbox" name="interests" value="technical"
                                    class="text-primary focus:ring-primary">
                                <span class="text-sm text-gray-600">Technical</span>
                            </label>
                        </div>
                    </div>
                </div>

                <button type="submit" class="w-full bg-primary text-white py-3 !rounded-button hover:bg-primary/90">
                    Sign Up with Email
                </button>

                <p class="text-center text-sm">
                    Already have an account?
                    <a href="login">Login</a>
                </p>
            </form>
        </div>
    </main>
    <script>
        document.getElementById('signupForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const email = document.querySelector('input[type="email"]').value;
            const password = document.querySelector('input[type="password"]').value;
            const profession = document.querySelector('input[type="profession"]').value;
            const feildofworkstudy = document.querySelector('input[type="interest"]').value;


            console.log(email);
            const response = await fetch('/api/signup', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ email, password ,profession,feildofworkstudy})
            });

            const messageDiv = document.getElementById('message') || document.createElement('div');
            messageDiv.id = 'message';
            document.getElementById('signupForm').appendChild(messageDiv);

            const result = await response.json();

            if (response.ok) {
                messageDiv.textContent = result.message;
                messageDiv.style.color = 'green';
            } else {
                messageDiv.textContent = result.error || 'Signup failed!';
                messageDiv.style.color = 'red';
            }
        });
    </script>


</body>

</html>