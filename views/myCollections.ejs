

<div class="max-w-6xl mx-auto mt-10 px-4">
  <h2 class="text-3xl font-bold text-center text-red-700 mb-8">My Collections</h2>

  <% if (uploads.length === 0) { %>
    <p class="text-center text-gray-500">You haven't uploaded anything yet.</p>
  <% } else { %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% uploads.forEach(upload => { %>
        <div class="bg-white shadow-md rounded-xl overflow-hidden border border-gray-200">
          <img src="/uploads/<%= upload.cover %>" alt="Cover" class="w-full h-56 object-cover">
          <div class="p-4">
            <h3 class="text-xl font-semibold text-gray-800 mb-1"><%= upload.title %></h3>
            <p class="text-sm text-gray-600 mb-1">Author: <%= upload.author %></p>
            <p class="text-sm text-gray-600 mb-3">Type: <%= upload.type %></p>
            <a href="/uploads/<%= upload.file %>" target="_blank" class="inline-block mt-2 text-red-600 hover:underline">ðŸ“– Read PDF</a>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
