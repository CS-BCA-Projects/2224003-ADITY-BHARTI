<%- include('partials/navbar') %>

<div class="max-w-7xl mx-auto mt-10 px-4">
  <h2 class="text-3xl font-bold text-red-700 text-center mb-8">All eBooks Library</h2>

  <% const types = ['Book', 'Thesis', 'Research Paper']; %>

  <% types.forEach(type => { %>
    <div class="mb-12">
      <h3 class="text-2xl font-semibold text-gray-800 border-b-2 border-red-500 pb-1 mb-4"><%= type %>s</h3>

      <% const typeUploads = uploads.filter(upload => upload.type === type); %>
      
      <% if (typeUploads.length === 0) { %>
        <p class="text-gray-500 mb-6">No <%= type.toLowerCase() %>s uploaded yet.</p>
      <% } else { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <% typeUploads.forEach(upload => { %>
            <div class="bg-white shadow-md rounded-xl overflow-hidden border border-gray-200">
              <img src="/uploads/<%= upload.cover %>" alt="Cover" class="w-full h-56 object-cover">
              <div class="p-4">
                <h3 class="text-xl font-semibold text-gray-800 mb-1"><%= upload.title %></h3>
                <p class="text-sm text-gray-600 mb-1">Author: <%= upload.author %></p>
                <p class="text-sm text-gray-600 mb-3">Type: <%= upload.type %></p>
                <a href="/uploads/<%= upload.file %>" target="_blank" class="inline-block text-red-600 hover:underline">ðŸ“– Read PDF</a>
              </div>
            </div>
          <% }); %>
        </div>
      <% } %>
    </div>
  <% }); %>
</div>
