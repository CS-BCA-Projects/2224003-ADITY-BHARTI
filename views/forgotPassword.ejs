<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white shadow-xl rounded-2xl p-8 w-full max-w-md space-y-6">
      
      <h2 class="text-2xl font-bold text-center text-red-600">Forgot Password</h2>
      <p class="text-center text-gray-600">Enter your registered email to receive an OTP</p>
      
      <!-- Forgot Password Form -->
      <form action="/forgot-password" method="POST" class="space-y-4">
        <input type="email" name="email" placeholder="Enter your email"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" required>
  
        <button type="submit"
          class="w-full bg-red-600 text-white py-2 rounded-lg hover:bg-red-700 transition duration-200">
          Send OTP
        </button>
      </form>
  
      <div class="text-center">
        <a href="/login" class="text-blue-600 hover:underline">Back to Login</a>
      </div>
    </div>
  </div>
  